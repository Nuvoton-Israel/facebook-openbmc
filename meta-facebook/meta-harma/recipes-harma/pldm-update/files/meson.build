project(
  'pldm-update',
  'cpp',
  version: '0.1',
  meson_version: '>=0.57.0',
  license: 'Apache-2.0',
  default_options: [
    'werror=true',
    'warning_level=3',
    'cpp_std=c++23',
  ]
)

src = [
  'pldm-update.cpp',
  'mmc-recovery.cpp',
  'options.cpp',
]

deps = [
  dependency('sdbusplus'),
  dependency('libpldm')
]

executable(
  'pldm-update',
  src,
  dependencies: deps,
  install: true,
)
