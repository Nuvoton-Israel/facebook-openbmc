#!/bin/bash

check_packages() {
  required_packages=("python3-jsonschema" "meson" "ninja-build" "gtest" "gtest-devel" "gmock" "gmock-devel" "glog" "glog-devel" "json-devel" "cli11-devel")
  for package in "${required_packages[@]}"; do
    echo "Checking for $package"
    if ! rpm -q "$package" > /dev/null; then
      echo "${package} is not installed."
      exit 1
    fi
  done
}

check_source() {
  diff=$(diff <(clang-format "$1") "$1")
  if [ "$diff" != "" ]; then
    echo "$1 clang-format Failed"
    read -p "Do you want to run clang-format -i on $1? [y/n]" -r ans
    if [ "$ans" == "y" ]; then
      clang-format -i "$1"
    else
      exit 1
    fi
  fi
}

cpp_linter() {
  sources=$(find . -regex '.*\.\(cpp\|h\)$' -print)
  for f in $sources; do
    echo "Checking $f"
    check_source "$f"
  done
}

check_packages
curr=$(dirname "$0")
cd "$curr" || exit 1
cpp_linter

set -e
meson -Dsyslog=false -Dpython-path=/usr/bin/python3 /tmp/builddir
ninja -C /tmp/builddir
meson test -C /tmp/builddir
